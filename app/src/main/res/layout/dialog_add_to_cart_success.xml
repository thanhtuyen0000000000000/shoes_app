<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profile_card_bg"
    android:padding="24dp">

    <!-- Success Icon -->
    <androidx.cardview.widget.CardView
        android:id="@+id/iconCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_2"
            android:tint="@color/white"
            android:scaleType="centerInside" />

    </androidx.cardview.widget.CardView>

    <!-- Success Title -->
    <TextView
        android:id="@+id/successTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thêm vào giỏ hàng thành công!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iconCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Product Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/successTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Product Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/lightGrey">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shoes" />

            </androidx.cardview.widget.CardView>

            <!-- Product Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kích thước: "
                        android:textSize="12sp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/productSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        android:background="@drawable/grey_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="$99.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/productInfoCard">

        <!-- Continue Shopping Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/continueShoppingBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/lightGrey"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tiếp tục mua sắm"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableStart="@drawable/btn_1"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </androidx.cardview.widget.CardView>

        <!-- View Cart Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/viewCartBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/purple"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Xem giỏ hàng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableStart="@drawable/btn_2"
                android:drawablePadding="8dp"
                android:drawableTint="@color/white"
                android:gravity="center_vertical" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Close Button -->
    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:rotation="45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout> 